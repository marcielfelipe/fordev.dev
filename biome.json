{
  "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": false
  },
  "files": {
    "ignoreUnknown": false,
    "include": ["src/**/*.ts", "src/**/*.tsx"]
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineEnding": "lf",
    "lineWidth": 80
  },
  "organizeImports": {
    "enabled": true
  },
  "linter": {
    "enabled": true,
    "rules": {
      "performance": {
        "noAccumulatingSpread": "off"
      },
      "recommended": true,
      "complexity": {
        "noForEach": "off",
        "useLiteralKeys": {
          "fix": "safe",
          "level": "error"
        },
        "noUselessTernary": "off"
      },
      "suspicious": {
        "noArrayIndexKey": "off",
        "noExplicitAny": "off"
      },
      "a11y": {
        "noSvgWithoutTitle": "off"
      },
      "style": {
        "useTemplate": {
          "fix": "safe",
          "level": "error"
        },
        "noNonNullAssertion": "off",
        "noUnusedTemplateLiteral": {
          "fix": "safe",
          "level": "error"
        },
        "useNodejsImportProtocol": "off"
      }
    }
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "double"
    }
  }
}
